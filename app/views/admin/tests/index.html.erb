<div class="container mt-3">
<h1 class="mb-4"><%= t('.header') %></h1>

<%= render 'shared/errors', resource: @test%>

<table class="table">
  <tr>
    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.cat') %></th>
    <th><%= t('.questions') %></th>
    <th><%= t('.visible') %></th>
    <th><%= t('.deadline') %></th>
    <th colspan='3'><%= t('.actions') %></th>
  </tr>

  <%= render @tests %>

</table>

<div class="mb-4">
  <%= link_to t('.badge'), admin_badges_path, class: "btn btn-warning" %>
  <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-success" %>
  <%= link_to t('.gists'), admin_gists_path, class: "btn btn-primary" %>
</div>

</div>
